<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    android:background="#E6E6E6"
    >
    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:textSize="50dp"


        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"

        >

        <TextView
            android:id="@+id/chuyu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="%"
            android:textSize="40sp"
            android:layout_margin="2dp"
            android:background="@drawable/selector_grey_bg"
            />

        <TextView
            android:id="@+id/CE"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="CE"
            android:layout_margin="2dp"
            android:textSize="40sp"
            android:background="@drawable/selector_grey_bg"
            />

        <TextView
            android:id="@+id/C"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="C"
            android:layout_margin="2dp"
            android:textSize="40sp"
            android:background="@drawable/selector_white_bg"
            />
        <TextView
            android:id="@+id/tuige"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="⇦"
            android:layout_margin="2dp"
            android:textSize="40sp"
            android:gravity="center"
            android:background="@drawable/selector_white_bg"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="1⁄x"
            android:layout_margin="2dp"
            android:gravity="center"
            android:textSize="40sp"
            android:background="@drawable/selector_white_bg"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="x²"
            android:layout_margin="2dp"
            android:textSize="40sp"
            android:gravity="center"
            android:background="@drawable/selector_white_bg"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="²√x"
            android:gravity="center"
            android:textSize="40sp"
            android:layout_margin="2dp"
            android:background="@drawable/selector_white_bg"
            />

        <TextView
            android:id="@+id/chu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="/"
            android:layout_margin="2dp"
            android:textSize="40sp"
            android:background="@drawable/selector_white_bg"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/seven"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="7"
            android:layout_margin="2dp"
            android:textSize="40sp"
            android:background="@drawable/selector_white_bg"
            />

        <TextView
            android:id="@+id/eight"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="8"
            android:layout_margin="2dp"
            android:textSize="40sp"
            android:background="@drawable/selector_white_bg"
            />

        <TextView
            android:id="@+id/nine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_margin="2dp"
            android:text="9"
            android:textSize="40sp"
            android:background="@drawable/selector_white_bg"
            />

        <TextView
            android:id="@+id/chen"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="*"
            android:layout_margin="2dp"
            android:textSize="40sp"
            android:background="@drawable/selector_white_bg"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/four"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="4"
            android:layout_margin="2dp"
            android:textSize="40sp"
            android:gravity="center"
            android:background="@drawable/selector_white_bg"
            />

        <TextView
            android:id="@+id/five"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="5"
            android:layout_margin="2dp"
            android:textSize="40sp"
            android:background="@drawable/selector_white_bg"
            />

        <TextView
            android:id="@+id/six"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/selector_white_bg"
            android:gravity="center"
            android:text="6"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/jian"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="-"
            android:layout_margin="2dp"
            android:textSize="40sp"
            android:gravity="center"
            android:background="@drawable/selector_white_bg"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/one"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/_1"
            android:layout_margin="2dp"
            android:textSize="40sp"
            android:gravity="center"
            android:background="@drawable/selector_white_bg"
            />
        <TextView
            android:id="@+id/two"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="2"
            android:layout_margin="2dp"
            android:textSize="40sp"
            android:gravity="center"
            android:background="@drawable/selector_white_bg"
            />
        <TextView
            android:id="@+id/three"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="3"
            android:layout_margin="2dp"
            android:textSize="40sp"
            android:gravity="center"
            android:background="@drawable/selector_white_bg"
            />
        <TextView
            android:id="@+id/jia"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="+"
            android:layout_margin="2dp"
            android:textSize="40sp"
            android:gravity="center"
            android:background="@drawable/selector_white_bg"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="±"
            android:layout_margin="2dp"
            android:textSize="40sp"
            android:gravity="center"
            android:background="@drawable/selector_white_bg"
            />
        <TextView
            android:id="@+id/zero"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="0"
            android:layout_margin="2dp"
            android:textSize="40sp"
            android:gravity="center"
            android:background="@drawable/selector_white_bg"
            />
        <TextView
            android:id="@+id/dian"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="."
            android:layout_margin="2dp"
            android:textSize="40sp"
            android:gravity="center"
            android:background="@drawable/selector_white_bg"
            />
        <TextView
            android:id="@+id/dengyu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="="
            android:layout_margin="2dp"
            android:textSize="40sp"
            android:gravity="center"
            android:background="@drawable/selector_blue_bg"
            />
    </LinearLayout>


  </LinearLayout>